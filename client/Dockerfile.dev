
# Imagem base atualizada e instruções para minimizar vulnerabilidades
FROM node:22-alpine

# Atualizar pacotes do sistema e instalar git em um único RUN (usando apk para Alpine)
RUN apk update && apk upgrade && apk add --no-cache git && rm -rf /var/cache/apk/*

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependências e limpar cache
RUN npm ci && npm cache clean --force

# Expor porta do frontend
EXPOSE 5173

# Comando para desenvolvimento
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
