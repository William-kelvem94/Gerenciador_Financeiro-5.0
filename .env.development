# ===== APLICA√á√ÉO ===== #
NODE_ENV=development
APP_NAME="Will Finance 5.0 DEV"
APP_VERSION=5.0.0
APP_PORT=3000
API_PORT=8080

# ===== DATABASE - PostgreSQL ===== #
DB_HOST=localhost
DB_PORT=5432
DB_NAME=will_finance_dev
DB_USER=will_finance_user
DB_PASSWORD=dev_password_2024
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# ===== REDIS CACHE ===== #
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password_2024
