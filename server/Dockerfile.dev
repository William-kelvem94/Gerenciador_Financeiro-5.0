
# Imagem base atualizada e instruções para minimizar vulnerabilidades
FROM node:20-bookworm-slim

# Atualizar pacotes do sistema e instalar git/curl em um único RUN
RUN apt-get update && apt-get upgrade -y && apt-get install -y git curl && apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copiar package files
COPY package*.json ./
COPY prisma ./prisma/

# Instalar dependências, gerar Prisma client e limpar cache
RUN npm ci && \
    npx prisma generate && \
    npm cache clean --force

# Expor porta do backend
EXPOSE 8080

# Comando para desenvolvimento
CMD ["npm", "run", "dev"]
