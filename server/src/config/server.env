# Database Configuration
# Para desenvolvimento local com Docker: postgresql://will_finance:cyberpunk2077@localhost:5432/will_finance_db?schema=public
# Para desenvolvimento sem Docker (SQLite): file:./dev.db
DATABASE_URL="file:./dev.db"

# Server Configuration
PORT=8080
NODE_ENV=development
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Configuration
JWT_SECRET=cyberpunk-will-finance-2077-secret-dev-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=cyberpunk-will-finance-2077-refresh-secret-dev-key
JWT_REFRESH_EXPIRES_IN=30d

# Firebase Admin SDK (opcional para desenvolvimento)
FIREBASE_PROJECT_ID=will-finance-dev
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Google OAuth (opcional para desenvolvimento)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Redis Configuration (opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv,xlsx

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=cyberpunk-cookie-secret-dev

# Features
ENABLE_WEBSOCKETS=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true
ENABLE_HELMET=true

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# AI Features (opcional)
OPENAI_API_KEY=

# Logs
LOG_LEVEL=info
