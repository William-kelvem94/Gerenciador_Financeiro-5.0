# ====================
# Will Finance 5.0 - Environment Template
# ====================
# Copie este arquivo para .env e ajuste as variáveis conforme necessário

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=will_finance
DB_PASSWORD=change_me_secure_password_here
DB_DATABASE=will_finance_db
POSTGRES_USER=will_finance
POSTGRES_PASSWORD=change_me_secure_password_here
POSTGRES_DB=will_finance_db
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Security
JWT_SECRET=change_me_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=8080
NODE_ENV=development
API_PREFIX=/api/v1

# Client Configuration
CLIENT_URL=http://localhost:5173
VITE_API_URL=http://localhost:8080/api

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# IA Service
AI_SERVICE_URL=http://localhost:8001
AI_MODEL_PATH=/app/models/finance_predictor_v6.h5
AI_ENABLED=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,pdf,xlsx
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Firebase (Optional)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Production Only
CORS_ORIGIN=http://localhost:5173
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
